<p style="color: green"><%= notice %></p>
<div class="flex gap-2 mb-6 justify-between">
  <div class="flex gap-2 items-end ">
    <h2 class="text-3xl font-semibold">
      Tasks
    </h2>
    <%= link_to "Back to character", character_path(@character), class: "link link-primary link-underline-hover" %>
  </div>
  <%= link_to "New task", new_character_task_path(@character), class: "btn btn-primary self-end" %>
</div>
<div id="tasks" class="flex flex-col gap-6">
  <% @tasks.each do |task| %>
    <%= render task, show_buttons: false  %>
  <% end %>
</div>
